pipeline {
    agent any 

    stages { 
        stage('SCM Checkout') {
            steps {
                retry(3) {
                    git branch: 'main', url: 'https://SajaniBandara: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@github.com/SajaniBandara/Cafe_R'
                }
            }
        }

        stage('Build and Run Docker Compose') {
            steps {
                // Build and start containers using docker-compose
                bat 'docker-compose up -d --build'
            }
        }

        stage('Login to Docker Hub') {
            steps {
                withCredentials([string(credentialsId: 'dockerhubPassword', variable: 'DevopPass')]) {
                    bat "docker login -u saja0217 -p %DevopPass%"
                }
            }
        }

        stage('Push Images') {
            steps {
                // Push images for all services defined in docker-compose.yml
                bat 'docker-compose push'
            }
        }
    }

    post {
        always {
            // Stop and remove containers
            bat 'docker-compose down'
            // Logout from Docker Hub
            bat 'docker logout'
        }
    }
}