pipeline {
    agent any 
    
    stages { 
        stage('SCM Checkout') {
            steps {
                retry(3) {
                    git branch: 'main', url: 'https://SajaniBandara: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@github.com/SajaniBandara/Cafe_R'
                }
            }
        }
        stage('Build Docker Image') {
            steps {  
                bat 'docker build -t saja0217/Cafe:%BUILD_NUMBER% .'
            }
        }
        stage('Login to Docker Hub') {
            steps {
               withCredentials([string(credentialsId: 'dockerhubPassword', variable: 'DevopPass')]) {
                   bat "docker login -u saja0217 -p %DevopPass%"
                  }
            }
        }
        stage('Push Image') {
            steps {
                bat 'docker push saja0217/cafe:%BUILD_NUMBER%'
            }
        }
    }
    post {
        always {
            bat 'docker logout'
        }
    }
}